# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Shiprocket Credentials
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/invoice_db
REDIS_URL=redis://localhost:6379

# AWS Configuration (for Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud Configuration (for Vision API)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id

# Azure Configuration (for Computer Vision)
AZURE_VISION_ENDPOINT=your_azure_vision_endpoint
AZURE_VISION_KEY=your_azure_vision_key

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,tiff,bmp

# Security
SECRET_KEY=your_secret_key_for_jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance
CACHE_EXPIRE_TIME=3600  # 1 hour
MAX_WORKERS=4
RATE_LIMIT_PER_MINUTE=60

# Application Settings
PORT=8000
HOST=0.0.0.0

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# OCR Settings
OCR_PREPROCESSOR=advanced  # Options: basic, standard, advanced
OCR_ENGINES=paddle,easy,tesseract  # Comma-separated list of engines to use
OCR_CONFIDENCE_THRESHOLD=0.5
OCR_USE_GPU=false

# Processing Options
ENABLE_CACHING=true
UPLOAD_DIR=uploads
PROCESSED_DIR=processed

# Database Connection (Optional)
DB_TYPE=sqlite  # Options: sqlite, postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_db
DB_USER=postgres
DB_PASSWORD=password

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Shiprocket Integration
SHIPROCKET_DEFAULT_PICKUP=Primary

# Tesseract Path (Only needed if Tesseract is not in PATH)
TESSERACT_CMD=

# Security
CORS_ORIGINS=*  # Comma-separated list of allowed origins, or * for all
API_KEY=  # Optional API key for protected endpoints 